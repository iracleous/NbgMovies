@page
@model NbgMovies.Pages.IndexModel

@{
    ViewData["Title"] = "ListActors";
}

<h1>Index</h1>

<p>
    <a asp-page="CreateActor">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Actor[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Actor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-page="./EditActor" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./DetailsActor" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./DeleteActor" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
